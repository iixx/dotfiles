set number relativenumber
set hlsearch ignorecase smartcase
set backspace=indent,eol,start
set scrolloff=1

let mapleader = '\'
map <space> <leader>

noremap j gj
noremap k gk
noremap zr zR
noremap zm zM

nnoremap 0 ^
nnoremap - $
nnoremap Y y$
nnoremap yp "0p
nnoremap yP "0P
nnoremap U <C-R>

nnoremap <leader>y "*y
nnoremap <leader>Y "*y$
nnoremap <leader>p "*p
nnoremap <leader>P "*P
nnoremap <leader>/ :set invhlsearch<CR>

inoremap <C-K> <Up>
inoremap <C-J> <Down>
inoremap <C-H> <Left>
inoremap <C-L> <Right>

vnoremap < <gv
vnoremap > >gv

noremap <F1> :action VimPluginToggle<CR>
nnoremap gc :action CommentByLineComment<CR>
nnoremap <leader>j :action emacsIDEAs.AceJumpWord<CR>
